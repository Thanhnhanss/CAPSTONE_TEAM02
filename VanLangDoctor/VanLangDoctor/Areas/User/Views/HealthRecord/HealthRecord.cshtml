@model VanLangDoctor.Models.SO_KHAM_BENH

@{
    ViewBag.Title = "Sổ khám bệnh";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/assets-HealthRecord/nicepage.css" media="screen">
<link rel="stylesheet" href="~/Content/assets-HealthRecord/Sổ-khám-bệnh.css" media="screen">

<script class="u-script" type="text/javascript" src="~/Content/assets-HealthRecord/jquery.js" defer=""></script>
<script class="u-script" type="text/javascript" src="~/Content/assets-HealthRecord/nicepage.js" defer=""></script>

<link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
<link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700">



<body class="u-body u-xl-mode">
    <section class="u-clearfix u-image u-section-1" id="carousel_aa97">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-clearfix u-layout-wrap u-layout-wrap-1">
                <div class="u-layout">
                    <div class="u-layout-row">
                        <div class="u-container-style u-layout-cell u-left-cell u-size-30 u-layout-cell-1" src="">
                            <div class="u-container-layout u-valign-bottom">
                                <img class="u-image u-image-contain u-image-1" src="~/Content/assets-HealthRecord/images/6158b984e0fd04ce18f390ab2b6eab25.png">
                            </div>
                        </div>
                        <div class="u-align-left u-container-style u-layout-cell u-right-cell u-size-30 u-layout-cell-2">
                            <div class="u-container-layout u-container-layout-2">
                                <h1 class="u-custom-font u-font-oswald u-text u-text-body-alt-color u-text-1">Sổ khám bệnh</h1>
                                <p class="u-custom-font u-font-oswald u-text u-text-body-alt-color u-text-2">Sức khỏe của bạn là ưu tiên hàng đầu của chúng tôi</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="u-align-center u-clearfix u-section-2" id="carousel_7070">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-border-10 u-border-palette-1-base u-container-style u-group u-group-1">
                <div class="u-container-layout u-container-layout-1">
                    <h2 class="u-align-center u-custom-font u-font-oswald u-text u-text-1">Thông tin bệnh nhân</h2>
                    <div class="u-expanded-width u-form u-form-1">
                        <form action="#" method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" style="padding: 10px" source="email" name="form">
                            <div class="u-form-group u-form-name">
                                <label for="name-31bd" class="u-label">Họ và tên</label>
                                <input type="text" value="@Model.BENH_NHAN.TEN_BN" id="name-31bd" name="name" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="" readonly>
                            </div>
                            <div class="u-form-date u-form-group u-form-partition-factor-3">
                                <label for="email-31bd" class="u-label">Ngày sinh</label>
                                <input type="date" value="@Model.BENH_NHAN.NGAY_SINH.Value.ToString("yyyy-MM-dd")" id="email-31bd" name="email" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required" readonly>
                            </div>
                            <div class="u-form-group u-form-partition-factor-3 u-form-group-3">                                <label for="text-a4cc" class="u-label">Giới tính</label>
                                <input type="text" value="@Model.BENH_NHAN.GIOI_TINH" id="text-a4cc" name="text-1" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" readonly>
                            </div>
                            <div class="u-form-group u-form-partition-factor-3 u-form-phone u-form-group-4">
                                <label for="text-ea5d" class="u-label">Điện thoại liên lạc</label>
                                <input type="tel" value="@Model.BENH_NHAN.SDT" id="text-ea5d" name="text" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" readonly>
                            </div>
                            <div class="u-form-email u-form-group u-form-group-5">
                                <label for="text-a9ab" class="u-label">E-mail</label>
                                <input type="email" value="@Model.BENH_NHAN.AspNetUser.Email" id="text-a9ab" name="text-3" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" readonly>
                            </div>
                        </form>
                        <br />
                        <h2 style="text-align:center">Danh sách đơn thuốc</h2>
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Chẩn đoán</th>
                                    <th scope="col">Kết quả</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col">Bác sĩ</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < ViewBag.Prescriptions.Count; i++)
                                {
                                    <tr>
                                        <td scope="row">@(i + 1)</td>
                                        <td>@ViewBag.Prescriptions[i].CHUAN_DOAN</td>
                                        <td>@ViewBag.Prescriptions[i].KET_QUA</td>
                                        <td>@ViewBag.Prescriptions[i].NGAY_LAP</td>
                                        <td>@ViewBag.Prescriptions[i].BACSI.TEN_BACSI</td>
                                        <td><a href="@Url.Action("Prescriptions", "HealthRecord", new { id = ViewBag.Prescriptions[i].ID_DON_THUOC })">Xem chi tiết</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>