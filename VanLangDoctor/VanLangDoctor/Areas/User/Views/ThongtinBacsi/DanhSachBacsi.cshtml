@model IEnumerable<VanLangDoctor.Models.BACSI>

@{
    ViewBag.Title = "Bác sĩ";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/assets-dr/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/animate.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/aos.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/icomoon.css">
    <link rel="stylesheet" href="~/Content/assets-dr/css/style.css">
</head>
<div class="container">
    <div class="row justify-content-center mb-5 pb-5">
        <div class="col-md-8 text-center heading-section ftco-animate fadeInUp ftco-animated">
            <h2 class="title-about">Bác sĩ</h2>
            <p>Mọi người trả tiền cho “công sức” của bác sĩ, còn sự tử tế của bác sĩ thì vẫn sẽ mãi là món nợ ân tình.</p>
        </div>
    </div>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 d-flex mb-sm-4 ftco-animate fadeInUp ftco-animated">
                <div class="staff" style="border-radius:2em">
                    <a href="@Url.Action("thongtinbacsi","ThongtinBacsi", new {id = item.ID_BACSI })">
                        <div class="img mb-4" style="background-image: url(../images/person_7.jpg);">
                            <img src="~/Content/assets-dr/images/person_7.jpg" style="height: 180px; width: 180px; border-radius: 50%" />
                        </div>
                    </a>
                    <div class="info text-center">
                        <h3><a href="@Url.Action("thongtinbacsi","ThongtinBacsi", new {id = item.ID_BACSI })">@item.TEN_BACSI</a></h3>

                        <span class="position">@item.KHOA1.TEN_KHOA</span>
                        <div class="text">
                            <p><img src="https://img.icons8.com/ios/50/000000/lifecycle--v1.png" style="height: 20px" /> @item.TUOI tuổi</p>
                            <p><i class="icon-mail_outline"></i> @item.EMAIL</p>
                            <p><img src="https://img.icons8.com/dotty/80/000000/internship.png" style="height: 20px" /> @item.KINH_NGHIEM năm </p>
                            <ul class="ftco-social">
                                <li class="ftco-animate fadeInUp ftco-animated"><a href="#"><span class="icon-chat_bubble_outline"></span></a></li>
                                <li class="ftco-animate fadeInUp ftco-animated ">
                                    <a href="tel: +84 @item.SDT_BACSI">
                                        <i class="icon-phone2 popup-point">
                                            @if (item.SDT_BACSI == null)
                                            {<span></span> }
                                            else
                                            { <span class="popup-text">(+84) @item.SDT_BACSI</span>}
                                        </i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>