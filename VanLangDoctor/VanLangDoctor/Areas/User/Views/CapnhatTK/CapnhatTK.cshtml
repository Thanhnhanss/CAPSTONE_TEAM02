@model VanLangDoctor.Models.BENH_NHAN
@{
    ViewBag.Title = "Cập nhật tài khoản";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>DentaCare - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/assets-dr/css/icomoon.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/aos.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/jquery.timepicker.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/open-iconic-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/assets-dr/css/owl.theme.default.min.css" rel="stylesheet" />*
    <link href="~/Content/assets-dr/css/style.css" rel="stylesheet" />
</head>
<body>
    <section class="home-slider owl-carousel">
        <div class="slider-item bread-item" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container" data-scrollax-parent="true">
                <div class="row slider-text align-items-end">
                    <div class="col-md-7 col-sm-12 ftco-animate mb-5">
                        <p class="breadcrumbs" data-scrollax=" properties: { translateY: '70%', opacity: 1.6}"><span class="mr-2"><a href="/trang-chu">Trang Chủ</a></span> / <span>Tài khoản</span></p>
                        <h1 class="mb-3" data-scrollax=" properties: { translateY: '70%', opacity: .9}">@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section contact-section ftco-degree-bg">
        <div class="container">
            <div class="row d-flex mb-5 contact-info">
                <div class="col-md-12 mb-4">
                    <h2 class="h4">Contact Information</h2>
                </div>
                <div class="w-100"></div>
                <div class="col-md-3">
                    <p><span>Address:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
                </div>
                <div class="col-md-3">
                    <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
                </div>
                <div class="col-md-3">
                    <p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
                </div>
                <div class="col-md-3">
                    <p><span>Website</span> <a href="#">yoursite.com</a></p>
                </div>
            </div>
            <div class="row block-9">
                <div class="col-md-6 pr-md-5">
                    <form action="@Url.Action("Luu", "CapnhatTK")" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" class="form-control" value="@Model.AspNetUser.Id" name="id" />
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" disabled value="@Model.AspNetUser.Email">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="TEN_BN" value="@Model.TEN_BN" name="hovaten" placeholder="Tên của bạn">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="SDT" value="@Model.SDT" name="sdt" placeholder="Số điện thoại">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="GIOI_TINH" value="@Model.GIOI_TINH" name="gioitinh" placeholder="Giới tính">
                        </div>
                        @*<div class="form-group">
                            <input type="date" class="form-control" id="NGAY_SINH" value="@Model.NGAY_SINH" name="ngaysinh" placeholder="Ngày sinh">
                        </div>*@
                        <div class="form-group">
                            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                        </div>
                    </form>

                </div>

                <div class="col-md-6" id="map"></div>
            </div>
        </div>
    </section>

    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

    <!-- Modal -->
    <div class="modal fade" id="modalRequest" tabindex="-1" role="dialog" aria-labelledby="modalRequestLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalRequestLabel">Make an Appointment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="#">
                        <div class="form-group">
                            <!-- <label for="appointment_name" class="text-black">Full Name</label> -->
                            <input type="text" class="form-control" id="appointment_name" placeholder="Full Name">
                        </div>
                        <div class="form-group">
                            <!-- <label for="appointment_email" class="text-black">Email</label> -->
                            <input type="text" class="form-control" id="appointment_email" placeholder="Email">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <!-- <label for="appointment_date" class="text-black">Date</label> -->
                                    <input type="text" class="form-control appointment_date" placeholder="Date">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <!-- <label for="appointment_time" class="text-black">Time</label> -->
                                    <input type="text" class="form-control appointment_time" placeholder="Time">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <!-- <label for="appointment_message" class="text-black">Message</label> -->
                            <textarea name="" id="appointment_message" class="form-control" cols="30" rows="10" placeholder="Message"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Make an Appointment" class="btn btn-primary">
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script src="~/Content/assets-dr/js/jquery.min.js"></script>
    <script src="~/Content/assets-dr/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/assets-dr/js/popper.min.js"></script>
    <script src="~/Content/assets-dr/js/bootstrap.min.js"></script>
    <script src="~/Content/assets-dr/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/assets-dr/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/assets-dr/js/jquery.stellar.min.js"></script>
    <script src="~/Content/assets-dr/js/owl.carousel.min.js"></script>
    <script src="~/Content/assets-dr/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets-dr/js/aos.js"></script>
    <script src="~/Content/assets-dr/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/assets-dr/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/assets-dr/js/jquery.timepicker.min.js"></script>
    <script src="~/Content/assets-dr/js/scrollax.min.js"></script>
    <script src="~/Content/assets-dr/js/main.js"></script>
</body>
</html>

<section class="hero-banner hero-banner-sm text-center">
    <div class="container">
        <h1>Cập nhật tài khoản</h1>
        <nav aria-label="breadcrumb" class="banner-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật tài khoản</li>
            </ol>
        </nav>
    </div>
</section>
<section style="margin: 40px 0" class="section-margin">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <form action="@Url.Action("Luu", "CapnhatTK")" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" value="@Model.AspNetUser.Id" name="id" />
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" disabled value="@Model.AspNetUser.Email">
                            </div>
                            <div class="mb-3">
                                <label for="hovaten" class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" id="TEN_BN" value="@Model.TEN_BN" name="hovaten">
                            </div>
                            <div class="mb-3">
                                <label for="sdt" class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control" id="SDT" value="@Model.SDT" name="sdt">
                            </div>

                            @if (ViewBag.message != null)
                            {
                                <h3>@ViewBag.message</h3>
                            }

                            <div class="form-group mt-lg-3">
                                <button style="color:#fff" type="submit" class="button button-contactForm">Lưu</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>