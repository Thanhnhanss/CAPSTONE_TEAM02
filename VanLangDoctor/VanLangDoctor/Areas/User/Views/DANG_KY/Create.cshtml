@model VanLangDoctor.Models.DANG_KY
@{
    ViewBag.Title = "Đăng ký tư vấn viên";
}
<!DOCTYPE html>
<html style="font-size: 16px;">
<head>
    <link href="~/Content/assets-register/nicepage.css" rel="stylesheet" />
    <link href="~/Content/assets-register/Register-as-consultan.css" rel="stylesheet" />
    <script src="~/Content/assets-register/jquery.js"></script>

</head>
<body data-home-page="Register-as-consultan.html" data-home-page-title="Register as consultan" class="u-body u-xl-mode">
    <section class="u-align-center u-clearfix u-palette-1-light-3 u-section-1" id="carousel_9874">
        <img class="u-expanded-width u-image u-image-default u-image-1" src="~/Content/assets-register/images/ffdf-min.jpg" alt="" data-image-width="1920" data-image-height="911">
        <div class="u-container-style u-group u-shape-rectangle u-white u-group-1">
            <div class="u-container-layout u-container-layout-1">
                <h2 class="u-align-center u-text u-text-default u-text-palette-1-base u-text-1">Đăng ký thông tin</h2>
                <div class="u-form u-form-1">
                    <form action="@Url.Action("Create", "DANG_KY")" method="post" enctype="multipart/form-data" class="u-clearfix u-form-spacing-20 u-form-vertical u-inner-form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="u-form-group u-form-name u-form-group-1">
                            <label class="u-form-control-hidden u-label"></label>
                            <input type="text" placeholder="Tên của bạn *" id="HO_TEN" name="HO_TEN" class="u-grey-10 u-input u-input-rectangle" required>
                        </div>
                        <div class="u-form-email u-form-group u-form-partition-factor-2 u-form-group-2">
                            <label class="u-form-control-hidden u-label">Email</label>
                            <input type="email" placeholder="Email *" id="EMAIL" name="EMAIL" @*value="@Model.AspNetUser.Email"*@ class="u-grey-10 u-input u-input-rectangle" required>
                        </div>
                        <div class="u-form-date u-form-group u-form-partition-factor-2 u-form-group-3">
                            <label class="u-form-control-hidden u-label"></label>
                            <input type="date" min="@(DateTime.Now.Year-100)-12-31" max="@(DateTime.Now.Year-16)-12-31" placeholder="Ngày sinh *" id="NGAY_SINH" name="NGAY_SINH" class="u-grey-10 u-input u-input-rectangle" required>
                        </div>
                        <div class="u-form-group u-form-partition-factor-2 u-form-phone u-form-group-4">
                            <label class="u-form-control-hidden u-label"></label>
                            <input type="tel" pattern="\+?\d{0,3}[\s\(\-]?([0-9]{2,3})[\s\)\-]?([\s\-]?)([0-9]{3})[\s\-]?([0-9]{2})[\s\-]?([0-9]{2})" placeholder="Số điện thoại *" id="SDT" name="SDT" class="u-grey-10 u-input u-input-rectangle" required>
                        </div>
                        <div class="u-form-group u-form-partition-factor-2 u-form-select u-form-group-5">
                            <label class="u-form-control-hidden u-label"></label>
                            <div class="u-form-select-wrapper">
                                <select name="GIOI_TINH" id="GIOI_TINH" class="u-grey-10 u-input u-input-rectangle" required>
                                    <option value="">Giới tính *</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                            </div>
                        </div>
                        <div class="u-form-group u-form-group-6">
                            <input type="text" placeholder="Trình độ học vấn *" id="HOC_VAN" name="HOC_VAN" class="u-grey-10 u-input u-input-rectangle" required>
                        </div>
                        <div class="u-form-group u-form-group-7">
                            <input type="text" placeholder="Công việc hiện tại" id="NGHE_NGHIEP" name="NGHE_NGHIEP" class="u-grey-10 u-input u-input-rectangle">
                        </div>
                        <div class="u-form-group u-form-message u-form-group-8">
                            <textarea placeholder="Mục tiêu nghề nghiệp" rows="4" cols="50" id="MUC_TIEU" name="MUC_TIEU" class="u-grey-10 u-input u-input-rectangle" required=""></textarea>
                        </div>
                        <div class="u-form-group u-form-select u-form-group-9">
                            <label class="u-label">Ứng tuyển vào khoa*:</label>
                            <div class="u-form-select-wrapper">
                                <div class="col-md-12">
                                    @Html.DropDownList("ID_KHOA", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_KHOA, "", new { @class = "text-danger" })
                                </div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                            </div>
                        </div>

                        <div class="row u-form-group u-form-group-7">
                            <div class="col-sm-5">
                                <label>Ảnh đại diện*</label>
                                <input type="file" id="HINH_ANH" name="picture" class="form-control" onchange="readPicture(this)" title="Ảnh đại diện" accept="image/*" required><br />
                                <img id="Picture" style="height: 325px; width: 325px; object-fit: contain; border: 3px solid #0af; background-color: #e5e5e5" />
                            </div>
                            <div class="col-sm-offset-1 col-sm-5">
                                <label>Bằng cấp - Chứng chỉ</label>
                                <input multiple type="file" id="CHUNG_CHI" name="picture_CTC" class="form-control" onchange="readPicture_CTC(this)" title="Bằng cấp - Chứng chỉ" accept="image/*"><br />
                                <img id="Picture_CTC" style="height: 325px; width: 325px; object-fit: contain; border: 3px solid #0af; background-color: #e5e5e5" />
                            </div>
                        </div>
                        <br />
                        <div class="u-align-right u-form-group u-form-submit u-form-group-10">
                            <input type="submit" value="Đăng ký" class="u-active-grey-90 u-border-none u-btn u-btn-submit u-button-style u-hover-grey-90 u-palette-1-base u-btn-1" />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>
        function readPicture(input) {
            if (input.files && input.files[0])
                var reader = new FileReader();
            reader.onload = function (e) {
                $('img#Picture').attr('src', e.target.result)
            };
            reader.readAsDataURL(input.files[0])
        }
        function readPicture_CTC(input) {
            if (input.files && input.files[0])
                var reader = new FileReader();
            reader.onload = function (a) {
                $('img#Picture_CTC').attr('src', a.target.result)
            };
            reader.readAsDataURL(input.files[0])
        }
    </script>
</body>
</html>