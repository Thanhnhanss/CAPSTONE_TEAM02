@model IEnumerable<VanLangDoctor.Models.TIN_TUC>

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


<link rel="manifest" href="site.webmanifest">
<link rel="shortcut icon" type="image/x-icon" href="~/Content/assets-news/img/favicon.ico">
<!-- CSS here -->
<link href="~/Content/assets-ff/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/assets-news/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/assets-news/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/Content/assets-news/css/ticker-style.css">
<link rel="stylesheet" href="~/Content/assets-news/css/flaticon.css">
<link rel="stylesheet" href="~/Content/assets-news/css/slicknav.css">
<link rel="stylesheet" href="~/Content/assets-news/css/animate.min.css">
<link rel="stylesheet" href="~/Content/assets-news/css/magnific-popup.css">
<link rel="stylesheet" href="~/Content/assets-news/css/themify-icons.css">
<link rel="stylesheet" href="~/Content/assets-news/css/slick.css">
<link rel="stylesheet" href="~/Content/assets-news/css/nice-select.css">
<link rel="stylesheet" href="~/Content/assets-news/css/style.css">


<main>
    <!-- Trending Area Start -->
    <div class="trending-area">
        <div class="container">
            <div class="trending-main">
                <!-- Trending Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="trending-tittle">
                            <strong>Xem nhiều nhất</strong>
                            <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                            <div class="trending-animated">
                                <ul id="js-news" class="js-hidden">
                                        <li class="news-item">@ViewBag.Top1.TEN_BAI_VIET</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-auto">
                        <!-- Trending Top -->
                        <div class="trending-top mb-30">
                            <a href="~/trang-chu/tin-tuc/@ViewBag.Top1.TEN_BAI_VIET.ToLower().Replace(" ","-")-@ViewBag.Top1.ID_TIN_TUC">
                                <div class="trend-top-img">
                                    <img src="@Url.Action("Picture", new {ViewBag.Top1.ID_TIN_TUC})" height="650" alt="@ViewBag.Top1.TEN_BAI_VIET">

                                    <div class="trend-top-cap">
                                        <span>@ViewBag.Top1.DANH_MUC_TIN.Danhmuc_tin</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <!-- Trending Bottom -->
                        <div class="trending-bottom">
                            <div class="row">
                                @foreach (var t in ViewBag.Top3)
                                {
                                    <div class="col-lg-4">
                                        <div class="single-bottom mb-35">
                                            <div class="trend-bottom-img mb-30">
                                                <a href="~/trang-chu/tin-tuc/@t.TEN_BAI_VIET.ToLower().Replace(" ","-")-@t.ID_TIN_TUC">
                                                    <img src="@Url.Action("Picture", new {@t.ID_TIN_TUC})" alt="" height="300">
                                                </a>
                                            </div>
                                            <div class="trend-bottom-cap">
                                                <span class="color1">@t.DANH_MUC_TIN.Danhmuc_tin</span>
                                                <h4><a href="~/trang-chu/tin-tuc/@ViewBag.Top1.TEN_BAI_VIET.ToLower().Replace(" ","-")-@ViewBag.Top1.ID_TIN_TUC">@t.TEN_BAI_VIET</a></h4>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Trending Area End -->
    <br />
    <!-- Whats New Start -->
    <section class="whats-news-area pt-50 pb-20">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row d-flex justify-content-between">
                        <div class="col-lg-3 col-md-3">
                            <div class="section-tittle mb-30">
                                <h3>Tin tức</h3>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div class="properties__button">
                                <!--Nav Button  -->
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        @foreach (var i in ViewBag.danhmuc)
                                        {
                                            <a class="nav-item nav-link" id="camnang" href="@Url.Action("Tin_Tuc","TinTuc", new { id_cate = i.ID })">@i.Danhmuc_tin</a>
                                        }
                                    </div>
                                </nav>
                                <!--End Nav Button  -->
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="row staff">
                                @foreach (var n in Model)
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="single-what-news mb-100">
                                            <a class="what-img" href="~/trang-chu/tin-tuc/@n.TEN_BAI_VIET.ToLower().Replace(" ","-")-@n.ID_TIN_TUC">
                                                <img src="@Url.Action("Picture", new {n.ID_TIN_TUC})" style="width:100%;height:307px;" alt="">
                                            </a>
                                            <div class="what-cap">
                                                <span style="font-size:15px" class="color1 danhmuc">@n.DANH_MUC_TIN.Danhmuc_tin</span>
                                                <h3><a href="~/trang-chu/tin-tuc/@n.TEN_BAI_VIET.ToLower().Replace(" ","-")-@n.ID_TIN_TUC">@n.TEN_BAI_VIET</a></h3>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-40">
                        <h3>Theo dõi chúng tôi:</h3>
                    </div>
                    <!-- New Poster -->
                    <div class="news-poster d-none d-lg-block">
                        <script>
                            window.fbAsyncInit = function () {
                                FB.init({
                                    xfbml: true,
                                    version: 'v13.0'
                                });
                            };
                        </script>
                        <script async defer src="https://connect.facebook.net/en_US/sdk.js"></script>

                        <div class="fb-post"
                             data-href="https://www.facebook.com/vanlangdoctor/posts/135562665683087"
                             data-width="500">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Whats New End -->
    <!--   Weekly2-News start -->
    <div class="weekly2-news-area  weekly2-pading gray-bg">
        <div class="container">
            <div class="weekly2-wrapper">
                <!-- section Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle mb-30">
                            <h3>Bài viết gần đây</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="weekly2-news-active dot-style d-flex dot-style">
                            @foreach (var t in ViewBag.RecentArticles)
                            {
                                <div id="itemFilter" class="weekly2-single">
                                    <div class="weekly2-img">
                                        <a href="~/trang-chu/tin-tuc/@t.TEN_BAI_VIET.ToLower().Replace(" ","-")-@t.ID_TIN_TUC">
                                            <img src="@Url.Action("Picture", new { t.ID_TIN_TUC })" alt="@t.TEN_BAI_VIET" style="color:black" height="250">
                                        </a>
                                        
                                    </div>
                                    <div id="myTemp" class="weekly2-caption">
                                        <span class="color1">@t.DANH_MUC_TIN.Danhmuc_tin</span>
                                        <p>@t.NGAY_DANG</p>
                                        <h4><a href="~/trang-chu/tin-tuc/@t.TEN_BAI_VIET.ToLower().Replace(" ","-")-@t.ID_TIN_TUC">@t.TEN_BAI_VIET</a></h4>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Weekly-News -->
</main>



