<script>
    const btn = document.querySelector('#camnang');

    btn.addEventListener('click', function () {
        $('.staff').each(function (_, element) {
            if ($(element).find('.danhmuc').text().toLowerCase()) {
                $(element).parent().children().attr('style', 'display: none !important');
            }
            else {
                $(element).parent().children().removeAttr('style');
            }
        });
    });
</script>
