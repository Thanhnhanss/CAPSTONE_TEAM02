@model IEnumerable<VanLangDoctor.Models.DAT_LICH>

@{
    ViewBag.Title = "Lịch trực của bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- This page plugin CSS -->
<link href="~/Content/dist-ad/css/style.min.css" rel="stylesheet">
<!-- Custom CSS -->
<div class="page-wrapper" style="display: block">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-5 align-self-center">
                <div class="customize-input float-right">
                    <a class="button-plus" href="@Url.Action("Create", "QL_DatLich")">
                        <span>Đăng ký lịch trực</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                <thead>
                                    <tr>
                                        <th>
                                            Ngày trực
                                        </th>
                                        <th>
                                            Giờ trực
                                        </th>
                                        <th>
                                            Thứ
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.NGAY_TRUC.Value.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @item.NGAY_TRUC.Value.ToString("hh:mm tt")
                                            </td>
                                            <td>
                                                @switch (@item.NGAY_TRUC.Value.DayOfWeek)
                                                {
                                                    case DayOfWeek.Monday:
                                                        <span>Thứ hai</span>
                                                        break;
                                                    case DayOfWeek.Tuesday:
                                                        <span>Thứ ba</span>
                                                        break;
                                                    case DayOfWeek.Wednesday:
                                                        <span>Thứ tư</span>
                                                        break;
                                                    case DayOfWeek.Thursday:
                                                        <span>Thứ năm</span>
                                                        break;
                                                    case DayOfWeek.Friday:
                                                        <span>Thứ sáu</span>
                                                        break;
                                                    case DayOfWeek.Saturday:
                                                        <span>Thứ bảy</span>
                                                        break;
                                                    case DayOfWeek.Sunday:
                                                        <span>Chủ nhật</span>
                                                        break;
                                                    default:
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (item.NGAY_TRUC > DateTime.Now)
                                                {
                                                    <a href="@Url.Action("Edit","QL_DatLich", new { id = item.ID })"><i class="ti-pencil"></i></a>
                                                }
                                                else
                                                {
                                                    
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>