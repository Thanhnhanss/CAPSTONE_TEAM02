@model VanLangDoctor.Models.AspNetUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@*@model VanLangDoctor.Models.AspNetRole

@{
    ViewBag.Title = "Xóa quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}*@


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />
    <link href="~/Content/up.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("TaiKhoan","QL_TaiKhoan")" class="text-muted">Danh sách tài khoản</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="@Url.Action("TaiKhoan","QL_TaiKhoan")">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="card card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible bg-warning text-white border-0 fade show" role="alert" id="successMessage">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                            </button>
                            <strong>@TempData["Success"]</strong>
                        </div>
                    }
                    <h3 class="card-title">Bạn chắc chắn muốn xóa quyền tài khoản @Html.DisplayFor(model => model.UserName) ?</h3>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="button" style="position: relative; background-color: #FF0000 "><span>Thu hồi </span></button>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
</html>
