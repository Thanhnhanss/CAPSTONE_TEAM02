@model IEnumerable<VanLangDoctor.Models.BENH_NHAN>

@{
    ViewBag.Title = "Danh sách bệnh nhân";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                <thead>
                                    <tr>
                                        <th>Tên bệnh nhân</th>
                                        <th>Số điện thoại</th>
                                        <th>Giới tính</th>
                                        <th>Ngày sinh</th>
                                        <th>Sổ khám bệnh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("ChiTiet_BN", "QL_BenhNhan", new { id = item.ID_BENH_NHAN})">@item.TEN_BN</a></td>
                                            <td>@item.SDT</td>
                                            <td>@item.GIOI_TINH</td>
                                            <td>@Html.FormatValue(item.NGAY_SINH, "{0:d}")</td>
                                            <td style="text-align:center">
                                                @if (@item.SO_KHAM_BENH.Count == 0)
                                                {<a href="#"><i class="icon-book-open" title="Chi tiết sổ khám bệnh"></i></a> }
                                                else
                                                {
                                                    <a href="@Url.Action("So_Kham_Benh", "QL_BenhNhan", new {id = item.ID_BENH_NHAN})"><i class="icon-book-open" title="Chi tiết sổ khám bệnh"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên bệnh nhân</th>
                                        <th>Giới tính</th>
                                        <th>Ngày sinh</th>
                                        <th>Số điện thoại</th>
                                        <th>Sổ khám bệnh</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>