@model VanLangDoctor.Models.BENH_NHAN

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Xác nhận xóa";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />
    <link href="~/Content/up.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("DanhSach_BN","QL_BenhNhan")" class="text-muted">Danh sách bệnh nhân</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="@Url.Action("DanhSach_BN","QL_BenhNhan")">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="card card-body">
                    <h3 class="card-title">Bạn chắc chắn muốn xóa bệnh nhân @Html.DisplayFor(model => model.TEN_BN) ?</h3>
                    <p class="text-muted font-14 mb-3">
                        Sau khi xác nhận xóa, bệnh nhân @Model.TEN_BN sẽ không còn trên hệ thống!
                    </p>
                    <div class="alert alert-success">
                        <div class="dl-horizontal">
                            <div class="row">
                                <div class="col-6">
                                    <div class="row">
                                        <h5 class="col-md-4">Số điện thoại: </h5>
                                        <span class="col-md-4">@Html.DisplayFor(model => model.SDT)</span>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <h5 class="col-md-4">Ngày sinh: </h5>
                                        <span class="col-md-4">@Html.FormatValue(Model.NGAY_SINH, "{0:d}")</span>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <h5 class="col-md-4">Email: </h5>
                                        <span class="col-md-8">@Html.DisplayFor(model => model.AspNetUser.Email)</span>
                                    </div>
                                    <br />
                                </div>
                                <div class="col-6">
                                    <div class="card-body">
                                        <div class="row">
                                            <h4 class="col-4">Địa chỉ: </h4>
                                            @if (Model.DIA_CHI == null)
                                            {
                                                <span>Chưa có dữ liệu</span>
                                            }
                                            else
                                            {
                                                <p>@Html.DisplayFor(model => model.DIA_CHI)</p>
                                            }
                                        </div>
                                        <div class="row">
                                            <h4 class="col-md-4" style="color:red">Kết quả: </h4>
                                            @if (Html.DisplayFor(model => model.SO_KHAM_BENH.Count) != null)
                                            {
                                                <span>Chưa có dữ liệu</span>
                                            }
                                            else
                                            {
                                                <span>@Html.DisplayFor(model => model.SO_KHAM_BENH)</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="button" style="position: relative; background-color: #FF0000 "><span>Xóa </span></button>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
</html>