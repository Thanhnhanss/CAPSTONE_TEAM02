@model VanLangDoctor.Models.BENH_NHAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Xin chào</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Benh_Nhan", "QL_BenhNhan")">Thông tin bệnh nhân</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <form action="@Url.Action("Delete_BN", "QL_BenhNhan")" method="post">
                <div class="container">
                    <h1>Bác sĩ</h1>
                    <p>Thông tin chi tiết của bác sĩ</p>
                    <hr>
                    <label for="ten"><b>Tên bệnh nhân</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.TEN_BN)" name="ten" readonly required>

                    <label for="gioitinh"><b>Giới tính</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.GIOI_TINH)" name="gioitinh" readonly required>

                    <label for="ngaysinh"><b>Ngày sinh</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.NGAY_SINH)" name="ngaysinh" readonly required>

                    <label for="email"><b>Email</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.EMAIL)" name="email" readonly required>

                    <label for="sdt"><b>SĐT</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.SDT)" name="sdt" readonly required>

                    <label for="chuan_doan"><b>Chuẩn đoán</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.CHUAN_DOAN)" name="chuan_doan" readonly required>

                    <label for="ten_bs"><b>Tên bác sĩ</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.BACSI.TEN_BACSI)" name="ten_bs" readonly required>

                    <label for="ketqua"><b>Kết quả bệnh</b></label>
                    <input type="text" placeholder="@Html.DisplayFor(model => model.BENH_AN.KET_QUA)" name="ketqua" readonly required>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input id="delete" type="submit" value="Xoá" class="btn" /> <br />
                            @Html.ActionLink("Quay lại", "Benh_Nhan")
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
</div>
