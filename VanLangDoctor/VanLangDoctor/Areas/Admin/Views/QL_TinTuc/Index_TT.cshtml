@model IEnumerable<VanLangDoctor.Models.TIN_TUC>

@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">

    <div class="page-wrapper" style="display: block">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Xin chào</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index_TT", "QL_TinTuc")">Thông tin tin tức</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Thêm", "Create_TT")
            </p>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                    <tr>
                                        <th>Hình ảnh</th>

                                        <th>Tên bài viết</th>

                                        <th>Ngày đăng</th>

                                        <th>Nội dung</th>

                                        <th>Tác giả</th>

                                        <th>SEO TITLE</th>

                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@Url.Action("Picture", new {item.ID_TIN_TUC})" width="50" height="48" />
                                            </td>
                                            <td>
                                                @item.TEN_BAI_VIET
                                            </td>
                                            <td>
                                                @Html.FormatValue(item.NGAY_DANG, "{0:d}")
                                            </td>
                                            <td>
                                                @item.NOI_DUNG
                                            </td>
                                            <td>
                                                @item.TAC_GIA
                                            </td>
                                            <td>
                                                @item.SEO_TITLE
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit_TT","QL_TinTuc", new { id = item.ID_TIN_TUC })"><i class="ti-settings"></i></a>
                                                <a href="@Url.Action("Details_TT","QL_TinTuc", new { id = item.ID_TIN_TUC })"><i class="ti-eye"></i></a>
                                                <a href="@Url.Action("Delete_TT","QL_TinTuc", new { id = item.ID_TIN_TUC })"><i class="ti-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </table>
                                <ul class="pagination float-right">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
</div>