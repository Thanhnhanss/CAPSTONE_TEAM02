@model IEnumerable<VanLangDoctor.Models.THUOC>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<style>
    .scrollable {
        height: 600px;
        white-space: nowrap;
        overflow-x: scroll;
    }

        .scrollable table thead th {
            background-color: white;
        }

    .table-fixed tr {
        display: block;
    }
</style>
<h1>
    Danh sách thuốc
</h1>
<br />
<h5 style="color: #C0C0C0 ">
    Trang chủ / Thuốc / Danh sách thuốc
</h5>
<br />

<link href="@Url.Content("~/Areas/css/dataTables.bootstrap4.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Areas/js/jquery-3.4.1.min.js")"></script>
<script src="@Url.Content("~/Areas/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Areas/js/dataTables.bootstrap4.min.js")"></script>
<script>
    jQuery(document).ready(function ($) {
        var table = $('#tbThuoc').DataTable({
            "lengthMenu": [5, 20, 30, 100],
            "ordering": false,
            "language": {
                "decimal": "",
                "emptyTable": "Không có dữ liệu",
                "info": "Hiện từ _START_ tới _END_ trong _TOTAL_ dòng",
                "infoEmpty": "Hiện từ 0 tới 0 trong 0 dòng",
                "infoFiltered": "(tìm kiếm từ _MAX_)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "loadingRecords": "Đảng tải xuống...",
                "processing": "Đang xử lý...",
                "search": "Tìm kiếm thuốc:",
                "zeroRecords": "Không tìm thấy dữ liệu",
                "paginate": {
                    "first": "&laquo;",
                    "last": "&raquo;",
                    "next": "&rsaquo;",
                    "previous": "&lsaquo;"
                },
                "select": {
                    "rows": {
                        _: 'Đã chọn %d dòng',
                        0: ''
                    }
                }
            },
            "ajax": {
                "url": '@Url.Action("jsonThuoc", "THUOCsAdmin")',
                "type": "POST",
                "data": function (d) {
                    d.nsx = $("#nsx option:selected").val();
                },
                "datatype": "json"
            },
            "columns": [
                { "data": "TENTHUOC", "name": "TENTHUOC" },
                { "data": "LIEULUONG", "name": "LIEULUONG" },
                { "data": "MOTA", "name": "MOTA" },
                { "data": "HINHANH", "name": "HINHANH" },

                 @{ @*if (User.IsInRole("Admin"))*@
                     {

                        @Html.Raw(", { 'data': 'IDTHUOC', 'render': function(data) { return '<a class=\"btn btn-info btnchoose btn-sm\" href=\"/Admin/THUOCsAdmin/Edit/' + data + '\">Sửa</a>'} }");
                        @Html.Raw(", { 'data': 'IDTHUOC', 'render': function(data) { return '<a class=\"btn btn-info btnchoose btn-sm\" href=\"/Admin/THUOCsAdmin/Delete/' + data + '\">Xóa</a>'} }");
                         }
                     }

            ],
            "serverSide": "true",
            "processing": "true"
        });
        $('#nsx').on('change', function () {
            table.ajax.reload();
        });
    });
</script>
<div class="site-section">

    <div class="content">
        <div class="row">
            <div class="col-7">

                <a class="btn btn-primary" href="@Url.Action("Create","THUOCsAdmin")">Tạo Thuốc</a>
            </div>
            <br />
            <br />

            <div class="col-5 text-right">
                <div class="input-group">
                    Nhà Sản Xuất :  @Html.DropDownList("nsx", (IEnumerable<SelectListItem>)ViewBag.ID_NSX, new { @Class = "form-control" })
                </div>
            </div>
        </div>
        <div class="dataTables_scroll">
            <table class="table table-striped table-bordered " id="tbThuoc" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>TÊN THUỐC</th>
                        <th>LIỀU LƯỢNG</th>
                        <th>MÔ TẢ</th>
                        <th>HÌNH ẢNH</th>
                        <th>Sửa </th>
                        <th>Xóa </th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>