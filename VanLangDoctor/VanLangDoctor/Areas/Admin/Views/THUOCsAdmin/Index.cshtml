@model IEnumerable<VanLangDoctor.Models.THUOC>

@{
    ViewBag.Title = "Danh sách đơn thuốc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<!-- This page plugin CSS -->
<link href="~/Content/assets-ad/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="~/Content/dist-ad/css/style.min.css" rel="stylesheet">
<link href="~/Content/formcrud.css" rel="stylesheet" />
<div class="page-wrapper" style="display: block">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">Trang chủ</li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-5 align-self-center">
                <div class="customize-input float-right">
                    <a class="button-plus" href="~/Admin/THUOCsAdmin/Create">
                        <span>Thêm đơn thuốc</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                <thead>
                                    <tr>
                                        
                                        <th>Tên Thuốc</th>
                                        <th>Liều Lượng</th>
                                        <th>Mô Tả</th>
                                        <th>Hình Ảnh</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.TEN_THUOC</td>
                                            <td>@item.LIEU_LUONG</td>
                                            <td>@item.MO_TA</td>
                                            <td style="text-align:center"><img src="@Url.Action("Picture", new {item.ID_THUOC})" width="55" height="55" style="border-radius: 50%" /></td>

                                            <td>
                                                <a href="@Url.Action("Details","THUOCsAdmin", new { id = item.ID_THUOC })"><i class="ti-eye"></i></a>
                                                <a href="@Url.Action("Edit","THUOCsAdmin", new { id = item.ID_THUOC })"><i class="ti-pencil"></i></a>
                                                <a href="@Url.Action("Delete","THUOCsAdmin", new { id = item.ID_THUOC })"><i class="ti-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/assets-ad/libs/jquery/dist/jquery.min.js"></script>
<script src="~/Content/assets-ad/libs/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/Content/dist-ad/js/app-style-switcher.js"></script>
<script src="~/Content/dist-ad/js/feather.min.js"></script>
<script src="~/Content/assets-ad/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
<script src="~/Content/assets-ad/extra-libs/sparkline/sparkline.js"></script>
<script src="~/Content/dist-ad/js/custom.min.js"></script>
<script src="~/Content/assets-ad/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Content/dist-ad/js/pages/datatable/datatable-basic.init.js"></script>
