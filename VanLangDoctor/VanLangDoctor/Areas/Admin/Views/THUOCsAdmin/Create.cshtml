@model VanLangDoctor.Models.THUOC

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thêm mới thuốc";
}
<br />
<br />
<br />
<br />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />
</head>

<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">Trang chủ</li>
                                <li class="breadcrumb-item">Thuốc</li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="~/Admin/BACSIsAdmin/Index">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <form action="@Url.Action("Create","THUOCsAdmin")" method="post" enctype="multipart/form-data" id="basic-form">
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-7">


                            <div class="form-group">
                                <label><b>Tên thuốc</b></label>
                                <div class="col-12">
                                    @Html.EditorFor(model => model.TEN_THUOC, new { htmlAttributes = new { @class = "form-control", @placeholder = "VD:Ambroco 60Ml" } })
                                    @Html.ValidationMessageFor(model => model.TEN_THUOC, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Liều Lượng</b></label>
                                <div class="col-10">
                                    @Html.EditorFor(model => model.LIEU_LUONG, new { htmlAttributes = new { @class = "form-control", @placeholder = "VD:Người lớn: Uống 8,4 mg / lần x 3 – 4 lần / ngày hoăc ngậm dưới lưỡi 4 – 6 viên / ngày, chia làm nhiều lần.bạn phải để viên nén tan dần dưới lưỡi <br />Trẻ em: Liều dùng cho trẻ em vẫn chưa được nghiên cứu và xác định.Hãy hỏi ý kiến bác sĩ nếu bạn định dùng thuốc này cho trẻ." } })
                                    @Html.ValidationMessageFor(model => model.LIEU_LUONG, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Mô tả</b></label>
                                <div class="col-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.MO_TA, new { htmlAttributes = new { @class = "form-control", @placeholder = "VD:Điều trị các trường hợp phù nề do chấn thương, làm giảm & mất các bọc máu ở da" } })
                                        @Html.ValidationMessageFor(model => model.MO_TA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label><b>Nhà Sản Xuất</b></label>
                                <div class="col-md-10">
                                    @Html.DropDownList("ID_NSX", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_NSX, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <h4 class="card-title">Hình thuốc</h4>
                                    <input class="form-control" type="file" name="Picture" id="IMG" onchange="readPicture(this)" accept="image/jpeg,image/gif,image/png" />
                                    <br />
                                    <img id="Picture" style="height: 250px; width: 250px; object-fit: contain; border-radius: 50%; border: 3px solid #0af; background-color: #000000" />
                                </div>
                            </div>


                        </div>
                    </div>

                    <br />
                    <div class="col-md-5">
                        <button type="submit" class="button" style="vertical-align:middle"><span>Thêm mới </span></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
</html>
<script src="https://cdn.tiny.cloud/1/o05xhozlmzmedqkqoy70dh2cmo8boru7rhmjurcxygwd5a0h/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: 'textarea#MotaSP',
        menubar: false
    });
    function readPicture(input) {
        if (input.files && input.files[0])
            var reader = new FileReader();
        reader.onload = function (e) {
            $('img#Picture').attr('src', e.target.result)
        };
        reader.readAsDataURL(input.files[0])
    }
</script>
<script>
    tinymce.init({
        selector: '#LIEU_LUONG',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinymcespellchecker',
        toolbar: 'a11ycheck casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Vanlang',
    });
</script>
<script>
    tinymce.init({
        selector: '#MO_TA',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinymcespellchecker',
        toolbar: 'a11ycheck casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Vanlang',
    });
</script>
