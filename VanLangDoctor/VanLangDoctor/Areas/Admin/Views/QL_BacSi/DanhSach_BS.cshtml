@model IEnumerable<VanLangDoctor.Models.BACSI>

@{
    ViewBag.Title = "Danh sách bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- This page plugin CSS -->
<link href="~/Content/dist-ad/css/style.min.css" rel="stylesheet">
<!-- Custom CSS -->
<div class="page-wrapper" style="display: block">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item"><a href="/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-5 align-self-center">
                <div class="customize-input float-right">
                    <a class="button-plus" href="~/trang-chu-quan-ly/bac-si/them-moi">
                        <span>Thêm bác sĩ</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                <thead>
                                    <tr>
                                        <th>Tên bác sĩ</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày sinh</th>
                                        <th>Email</th>
                                        <th>Giới tính</th>
                                        <th>Nghề nghiệp</th>
                                        <th>Kinh nghiệm</th>
                                        <th>Ngày trực</th>
                                        <th>Hình đại diện</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="javascript:void(0)" class="font-weight-medium link">@item.TEN_BACSI</a></td>
                                            <td>@item.SDT</td>
                                            <td class="font-bold link">@Html.FormatValue(@item.NGAYSINH_BS, "{0:d}")</td>
                                            <td>@Html.DisplayFor(modelItem => item.AspNetUser.Email)</td>
                                            <td>@item.GIOI_TINH</td>
                                            <td>@item.NGHE_NGHIEP</td>
                                            <td>@item.KINH_NGHIEM Năm</td>
                                            <td>@Html.FormatValue(@item.NGAY_TRUC, "{0:d}")</td>
                                            <td style="text-align:center"><img src="@Url.Action("Picture", new {item.ID_BACSI})" width="55" height="55" style="border-radius: 50%" /></td>
                                            <td>
                                                <a href="@Url.Action("Edit","QL_BacSi", new { id = item.ID_BACSI })"><i class="ti-pencil"></i></a>
                                                <a href="@Url.Action("Delete","QL_BacSi", new { id = item.ID_BACSI })"><i class="ti-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên bác sĩ</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày sinh</th>
                                        <th>Email</th>
                                        <th>Giới tính</th>
                                        <th>Nghề nghiệp</th>
                                        <th>Kinh nghiệm</th>
                                        <th>Ngày trực</th>
                                        <th>Hình đại diện</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
