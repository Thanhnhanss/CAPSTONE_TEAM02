@model VanLangDoctor.Models.BACSI

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thêm mới bác sĩ";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly/bac-si/danh-sach" class="text-muted">Bác sĩ</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="~/trang-chu-quan-ly/bac-si/danh-sach">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Failed"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                            </button>
                            <span><strong>@TempData["Failed"]</strong></span>
                        </div>
                    }
                    <form action="@Url.Action("Create","QL_BacSi")" method="post" enctype="multipart/form-data" id="basic-form">
                        @Html.AntiForgeryToken()
                        <div class="container">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-9">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-8">
                                                    <label><b>Tên bác sĩ</b></label>
                                                    <div class="col-12">
                                                        @Html.EditorFor(model => model.TEN_BACSI, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: Nguyễn Văn A " } })
                                                        @Html.ValidationMessageFor(model => model.TEN_BACSI, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-4">
                                                    <label><b>Giới tính</b></label>
                                                    <div class="col-4">
                                                        <select style="border-radius: 3px; box-shadow: 5px 6px 9px -8px; padding: 0.5em 5em;" class="ui dropdown" name="GIOI_TINH" id="GIOI_TINH" required>
                                                            <option value="Nam">Nam</option>
                                                            <option value="Nữ">Nữ</option>
                                                            <option value="Khác">Khác</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-8">
                                                    <label><b>Số điện thoại</b></label>
                                                    <div class="col-12">
                                                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: 0905556***" } })
                                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-4">
                                                    <label><b>Kinh nghiệm</b></label>
                                                    <div class="col-12">
                                                        @Html.EditorFor(model => model.KINH_NGHIEM, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: 5 năm " } })
                                                        @Html.ValidationMessageFor(model => model.KINH_NGHIEM, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-6">
                                                    <label><b>Nghề nghiệp</b></label>
                                                    <div class="col-12">
                                                        @Html.EditorFor(model => model.NGHE_NGHIEP, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: Dược sĩ" } })
                                                        @Html.ValidationMessageFor(model => model.NGHE_NGHIEP, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <label><b>Email</b></label>
                                                    <div class="col-12">
                                                        @Html.DropDownList("ID_Email", null, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.ID_Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label><b>Chuyên khoa</b></label>
                                            <div class="col-12">
                                                @Html.DropDownList("ID_KHOA", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ID_KHOA, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <h4 class="card-title">Hình đại diện</h4>
                                            <input class="form-control" type="file" name="Picture" id="IMG" onchange="readPicture(this)" accept="image/jpeg,image/gif,image/png"/>
                                            <br />
                                            <img id="Picture" style="height: 250px; width: 250px; object-fit: contain; border-radius: 50%; border: 3px solid #0af; background-color: #00000000" />

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label><b>Ngày sinh</b></label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NGAYSINH_BS, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                @Html.ValidationMessageFor(model => model.NGAYSINH_BS, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <label><b>Ngày trực</b></label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NGAY_TRUC, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                @Html.ValidationMessageFor(model => model.NGAY_TRUC, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <br />
                                <div class="col-md-5">
                                    <button type="submit" class="button" style="vertical-align:middle"><span>Thêm mới </span></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
</html>
<script>
    tinymce.init({
        selector: 'textarea#MotaSP',
        menubar: false
    });
    function readPicture(input) {
        if (input.files && input.files[0])
            var reader = new FileReader();
        reader.onload = function (e) {
            $('img#Picture').attr('src', e.target.result)
        };
        reader.readAsDataURL(input.files[0])
    }
</script>
