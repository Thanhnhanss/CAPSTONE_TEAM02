@model IEnumerable<VanLangDoctor.Models.DAT_LICH_TU_VAN>

@{
    ViewBag.Title = "Danh sách lịch tư vấn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- This page plugin CSS -->
<link href="~/Content/dist-ad/css/style.min.css" rel="stylesheet">
<!-- Custom CSS -->
<div class="page-wrapper" style="display: block">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                <thead>
                                    <tr>
                                        <th>Tên bác sĩ</th>
                                        <th>Thời gian</th>
                                        <th>Địa điểm</th>
                                        <th>Bệnh nhân</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.BACSI.TEN_BACSI)</td>

                                        <td>@Html.DisplayFor(modelItem => item.NGAY_KHAM)</td>
                                        @if (item.LINK_GG != null)
                                        {
                                            <td align="center">
                                                <a href="@Html.DisplayFor(modelItem => item.LINK_GG)" target="_blank">
                                                    <img src="~/Content/assets-ad/images/Icon/icons8-live-video-on.gif" height="40" />
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td align="center">
                                                <img src="~/Content/assets-ad/images/Icon/icons8-no-video-100.png" height="40" />
                                            </td>
                                        }
                                        <td>@Html.DisplayFor(modelItem => item.AspNetUser.Email)</td>

                                        @if (item.TRANG_THAI == 1)
                                        {
                                            <td>Đã duyệt</td>
                                        }
                                        else if (item.TRANG_THAI == 0)
                                        {
                                            <td>Chờ duyệt</td>
                                        }
                                        else
                                        {
                                            <td>Bận</td>
                                        }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
