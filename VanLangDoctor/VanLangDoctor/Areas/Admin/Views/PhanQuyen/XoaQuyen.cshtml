@model VanLangDoctor.Models.AspNetRole

@{
    ViewBag.Title = "Xóa quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />
    <link href="~/Content/up.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("phanQuyenTK","PhanQuyen")" class="text-muted">Danh sách tài khoản</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="@Url.Action("phanQuyenTK","PhanQuyen")">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="card card-body">
                    <h3 class="card-title">Bạn chắc chắn muốn xóa quyền @Html.DisplayFor(model => model.Name) ?</h3>
                    <p class="text-muted font-14 mb-3">
                        Sau khi xác nhận xóa, quyền @Model.Name sẽ không còn trên hệ thống!
                    </p>
                    

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="button" style="position: relative; background-color: #FF0000 "><span>Xóa </span></button>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
</html>

