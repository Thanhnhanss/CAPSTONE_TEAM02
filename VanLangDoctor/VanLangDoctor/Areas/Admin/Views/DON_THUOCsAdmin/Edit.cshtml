@model VanLangDoctor.Models.DON_THUOC

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cập nhật đơn thuốc";
}
<br />
<br />
<br />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />

</head>
<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">Trang chủ</li>
                                <li class="breadcrumb-item">Danh sách đơn thuốc</li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="~/Admin/DON_THUOCsAdmin/Index">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr />

        @using (Html.BeginForm("Edit", "DON_THUOCsAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID_DON_THUOC)
                    <div class="row">
                        <div class="col-7">
                            <div class="form-group">
                                <label><b>Chuẩn đoán</b></label>
                                <div class="col-12">
                                    @Html.EditorFor(model => model.CHUAN_DOAN, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CHUAN_DOAN, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Chỉ Định</b></label>
                                <div class="col-10">
                                    @Html.EditorFor(model => model.CHI_DINH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CHI_DINH, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Lời Dẫn</b></label>
                                <div class="col-10">
                                    @Html.EditorFor(model => model.LOI_DAN, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LOI_DAN, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label><b>Thuốc</b></label>
                                <div class="col-md-10">
                                    @Html.DropDownList("ID_THUOC", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_THUOC, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label><b>Bác Sĩ</b></label>
                                <div class="col-md-10">
                                    @Html.DropDownList("ID_BACSI", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_BACSI, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label><b>Ngày sinh</b></label>
                                <div class="col-md-10">
                                    @if (Model.NGAY_LAP == null)
                                    {

                                        @Html.EditorFor(model => model.NGAY_LAP, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(model => model.NGAY_LAP, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NGAY_LAP, "", new { @class = "text-danger" })
                                    }
                                </div>
                            </div>
                            <div class="col-md-push-12 col-md-5">
                                <button type="submit" class="button" style="vertical-align:middle"><span>Xác nhận </span></button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        }
    </div>
</body>
</html>
<script src="https://cdn.tiny.cloud/1/o05xhozlmzmedqkqoy70dh2cmo8boru7rhmjurcxygwd5a0h/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    function readPicture(input) {
        if (input.files && input.files[0])
            var reader = new FileReader();
        reader.onload = function (e) {
            $('img#Picture').attr('src', e.target.result)
        };
        reader.readAsDataURL(input.files[0])
    }
</script>
