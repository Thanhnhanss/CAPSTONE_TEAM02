@model IEnumerable<VanLangDoctor.Models.DON_THUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />

<h1>
    Danh sách bác sĩ
</h1>
<br />
<h5 style="color: #C0C0C0 ">
    Đơn Thuốc / Đơn Thuốc / Danh sách đơn thuốc
</h5>
<br />

<link href="@Url.Content("~/Areas/css/dataTables.bootstrap4.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/js/jquery-3.4.1.min.js")"></script>
<script src="@Url.Content("~/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/js/dataTables.bootstrap4.min.js")"></script>
<script>
    jQuery(document).ready(function ($) {
        var table = $('#tbDonthuoc').DataTable({
            "lengthMenu": [5, 20, 30, 100],
            "ordering": false,
            "language": {
                "decimal": "",
                "emptyTable": "Không có dữ liệu",
                "info": "Hiện từ _START_ tới _END_ trong _TOTAL_ dòng",
                "infoEmpty": "Hiện từ 0 tới 0 trong 0 dòng",
                "infoFiltered": "(tìm kiếm từ _MAX_)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "loadingRecords": "Đảng tải xuống...",
                "processing": "Đang xử lý...",
                "search": "Tìm kiếm đơn thuốc:",
                "zeroRecords": "Không tìm thấy dữ liệu",
                "paginate": {
                    "first": "&laquo;",
                    "last": "&raquo;",
                    "next": "&rsaquo;",
                    "previous": "&lsaquo;"
                },
                "select": {
                    "rows": {
                        _: 'Đã chọn %d dòng',
                        0: ''
                    }
                }
            },
            "ajax": {
                "url": '@Url.Action("jsonDT", "DON_THUOCSsAdmin")',
                "type": "POST",
                "data": function (d) {
                    d.dt = $("#dt option:selected").val();
                },
                "datatype": "json"
            },
            "columns": [

                { "data": "TENBACSI", "name": "TENBACSI" },
                { "data": "SDT", "name": "SDT" },
                

                 @{ @*if (User.IsInRole("Admin"))*@
                     {

                        @Html.Raw(", { 'data': 'IDBS', 'render': function(data) { return '<a class=\"btn btn-info btnchoose btn-sm\" href=\"/Admin/DON_THUOCsAdmin/Edit/' + data + '\">Sửa</a>'} }");
                        @Html.Raw(", { 'data': 'IDBS', 'render': function(data) { return '<a class=\"btn btn-info btnchoose btn-sm\" href=\"/Admin/DON_THUOCsAdmin/Delete/' + data + '\">Xóa</a>'} }");
                         }
                     }

            ],
            "serverSide": "true",
            "processing": "true"
        });
        $('#dt').on('change', function () {
            table.ajax.reload();
        });
    });
</script>

<style>
    .scrollable {
        height: 600px;
        white-space: nowrap;
        overflow-x: scroll;
    }

        .scrollable table thead th {
            background-color: white;
        }

    .table-fixed tr {
        display: block;
    }
</style>

<div class="site-section">

    <div class="content">
        <div class="row">
            <div class="col-7">

                <a class="btn btn-primary" href="@Url.Action("Create","DON_THUOCSsAdmin")">Tạo Đơn Thuốc</a>
            </div>
            <br />
            <br />

            <div class="col-5 text-right">
                <div class="input-group">
                    Ngày :  @Html.DropDownList("dt", (IEnumerable<SelectListItem>)ViewBag.ID_DONTHUOC, new { @Class = "form-control" })
                </div>
            </div>
        </div>
        <div class="dataTables_scroll">
            <table class="table table-striped table-bordered " id="tbDonthuoc" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>TÊN BÁC SĨ</th>
                        <th>SỐ ĐIỆN THOẠI</th>
                        
                        <th>Sửa </th>
                        <th>Xóa </th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

