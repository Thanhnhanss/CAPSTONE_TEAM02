@model VanLangDoctor.Models.BACSI

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thêm mới bác sĩ";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .button{display: inline-block;border-radius: 4em;background-color: #f4511e;border: none;color: #FFFFFF;text-align: center;font-size: 13px;padding: 10px;width: 150px;transition: all 0.5s;cursor: pointer;margin: 5px}.button span{cursor: pointer;display: inline-block;position: relative;transition: 0.5s}.button span:after{content: '\00bb';position: absolute;opacity: 0;top: 0;right: -20px;transition: 0.5s}.button:hover span{padding-right: 25px}.button:hover span:after{opacity: 1;right: 0}
        .button-back{display: inline-block;border-radius: 4em;background-color: #f4511e;border: none;color: #ffffff;text-align: center;font-size: 13px;padding: 10px;width: 150px;transition: all 0.5s;cursor: pointer;margin: 5px}.button-back span-back{cursor: pointer;display: inline-block;position: relative;transition: 0.5s}.button-back span-back:after{content: "\00ab";position: absolute;opacity: 0;top: 0;right: -20px;transition: 0.5s}.button-back:hover span-back{padding-right: 25px}.button-back:hover span-back:after{opacity: 1;right: 0}
    </style>
    <link href="~/Content/formcrud.css" rel="stylesheet" />
</head>

<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly/bac-si/danh-sach" class="text-muted">Bác sĩ</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="~/trang-chu-quan-ly/bac-si/danh-sach">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label><b>Tên bác sĩ</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TEN_BACSI, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: Nguyễn Văn A " } })
                            @Html.ValidationMessageFor(model => model.TEN_BACSI, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Số điện thoại</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: 0905556***" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Giới tính</b></label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.GIOI_TINH, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: Nam" } })
                                @Html.ValidationMessageFor(model => model.GIOI_TINH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Email</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: nguyenvana@gmail.com " } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Nghề nghiệp</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGHE_NGHIEP, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: Dược sĩ" } })
                            @Html.ValidationMessageFor(model => model.NGHE_NGHIEP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Ngày sinh</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGAYSINH_BS, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.NGAYSINH_BS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Kinh nghiệm</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KINH_NGHIEM, new { htmlAttributes = new { @class = "form-control", @placeholder = "ví dụ: 5 năm " } })
                            @Html.ValidationMessageFor(model => model.KINH_NGHIEM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Ngày trực</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGAY_TRUC, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.NGAY_TRUC, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label><b>Hình đại diện</b></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HINH_ANH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HINH_ANH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Chuyên khoa</b></label>
                        <div class="col-md-10">
                            @Html.DropDownList("ID_KHOA", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_KHOA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-push-12 col-md-5">
                        <button type="submit" class="button" style="vertical-align:middle"><span>Thêm mới </span></button>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
</html>

