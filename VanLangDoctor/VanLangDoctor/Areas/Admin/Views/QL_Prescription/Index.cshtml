@model IEnumerable<VanLangDoctor.Models.DON_THUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper" style="display: block">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item"><a href="/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                            <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-5 align-self-center">
                <div class="customize-input float-right">
                    <a class="button-plus" href="@Url.Action("Create", "QL_Prescription")">
                        <span>Tạo đơn thuốc</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert" id="successMessage">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true" style=" float: right; margin-top: -10px">×</span>
                                    </button>
                                    <strong>@TempData["Success"]</strong>
                                </div>
                            }
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.KET_QUA)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CHUAN_DOAN)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CHI_DINH)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LOI_DAN)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NGAY_LAP)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BACSI.TEN_BACSI)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SO_KHAM_BENH.ID_SOKHAMBENH)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.KET_QUA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CHUAN_DOAN)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CHI_DINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LOI_DAN)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NGAY_LAP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BACSI.TEN_BACSI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SO_KHAM_BENH.ID_SOKHAMBENH)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID_DON_THUOC }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID_DON_THUOC }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID_DON_THUOC })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>