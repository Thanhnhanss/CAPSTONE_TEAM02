@model VanLangDoctor.Models.DANG_KY

@{
    ViewBag.Title = "Xóa hồ sơ đăng ký";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/formcrud.css" rel="stylesheet" />
    <link href="~/Content/up.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper" style="display: block;">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="~/trang-chu-quan-ly" class="text-muted">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("DanhSach_BN","QL_BenhNhan")" class="text-muted">Danh sách bệnh nhân</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <a class="button-back" href="@Url.Action("Index","QL_DangKyTVV")">
                            <span-back>Trở về</span-back>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="card card-body col-md-6">
                    <h3 class="card-title">Bạn chắc chắn muốn xóa hồ sơ này?</h3>
                    <p class="text-muted font-14 mb-3">
                        Sau khi xác nhận xóa, Hồ sơ ứng tuyển của @Model.HO_TEN.ToUpper() sẽ không còn trên hệ thống!
                    </p>
                    <div class="alert alert-success">
                        <div class="dl-horizontal">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <h4 class="col-md-4">Tên ứng viên:</h4>
                                        <span class="col-md-7">@Html.DisplayFor(model => model.HO_TEN)</span>
                                    </div>
                                    <div class="row">
                                        <h4 class="col-md-4">Ngày sinh: </h4>
                                        <span class="col-md-7">@Html.FormatValue(Model.NGAY_SINH, "{0:d}")</span>
                                    </div>  
                                    <div class="row">
                                        <h4 class="col-md-4">Email: </h4>
                                        <span class="col-md-7">@Html.DisplayFor(model => model.EMAIL)</span>
                                    </div>
                                    <div class="row">
                                        <h4 class="col-md-4">Số điện thoại: </h4>
                                        <span class="col-md-7">@Html.DisplayFor(model => model.SDT)</span>
                                    </div>
                                    <div class="row">
                                        <h4 class="col-md-4">Khoa ứng tuyển: </h4>
                                        <span class="col-md-7">@Html.DisplayFor(model => model.KHOA.TEN_KHOA)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="button" style="position: relative; background-color: #FF0000 "><span>Xóa </span></button>
                    }
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body" style="text-align:center">
                            <h4 class="card-title">Hình đại diện</h4><br /><br /><br />
                            <link href="~/Content/uploadavt.css" rel="stylesheet" />
                            <main>
                                <div id="preview">
                                    <div id="view-img"><img src="@Url.Action("Picture", new {Model.ID})" style="height: 200px; width: 200px; object-fit:contain; border: 3px solid #0af; background-color:#000000" /></div>
                                </div>
                            </main>
                            <script src="~/Scripts/uploadavt.js"></script>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body" style="text-align:center">
                            <h4 class="card-title">Bằng cấp - Chứng chỉ</h4><br /><br /><br />
                            <link href="~/Content/uploadavt.css" rel="stylesheet" />
                            <main>
                                <div id="preview">
                                    <div id="view-img"><img src="@Url.Action("Certificate", new {Model.ID})" style="height: 200px; width: 200px; object-fit:contain; border: 3px solid #0af; background-color:#000000" /></div>
                                </div>
                            </main>
                            <script src="~/Scripts/uploadavt.js"></script>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div>
            </div>
        </div>
    </div>
</body>
</html>