@{
    ViewBag.Title = "Trang chủ quản lý";
}

<div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Xin chào</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="~/trang-chu-quan-ly">Trang chủ</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-start">
                                <h4 class="card-title mb-0">Thống kê phản hồi</h4>

                                <div class="ml-auto">
                                    <div class="dropdown sub-dropdown">
                                        <button class="btn btn-link text-muted dropdown-toggle" type="button"
                                                id="dd1" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                            <i data-feather="more-vertical"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd1">
                                            <a class="dropdown-item" href="#">Insert</a>
                                            <a class="dropdown-item" href="#">Update</a>
                                            <a class="dropdown-item" href="#">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="pl-4 mb-5">
                                <div class="stats ct-charts position-relative" style="width: 100%; height: 315px; vertical-align: middle">
                                    <canvas id="chart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-0">Thống kê đơn thuốc</h4>
                            <div class="card-body" style="width: 100%; height: 315px; vertical-align:middle">
                                <canvas id="chartDT"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script>
    $(document).ready(() => {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ChartData", "HomeAdmin")',
            success: function (charts) {
                if (charts.code == 404) {
                    lert("Error loading data! Please try again!.");
                    return;
                }
                var data = charts.dbchart;
                var ctx = document.getElementById('chart').getContext('2d');
                var borderColors = {
                    'Rất không hài lòng': 'rgb(232, 16, 49)',
                    'Chưa hài lòng': 'rgb(250, 5, 209)',
                    'Bình thường': 'rgb(180, 74, 255)',
                    'Hài lòng': 'rgb(74, 198, 255)',
                    'Rất hài lòng': 'rgb(19, 168, 168)'
                };
                var backgroundColors = {
                    'Rất không hài lòng': 'rgb(232, 16, 49, 0.5)',
                    'Chưa hài lòng': 'rgb(250, 5, 209, 0.5)',
                    'Bình thường': 'rgb(180, 74, 255, 0.5)',
                    'Hài lòng': 'rgb(74, 198, 255, 0.5)',
                    'Rất hài lòng': 'rgb(19, 168, 168, 0.5)'
                }
                var chart = new Chart(ctx, {
                    type: 'bar',
                    options: {
                        indexAxis: 'y',
                        element: {
                            bar: {
                                borderWidth: 1
                            }
                        },
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'Biểu đồ mức độ hài lòng',
                                position: 'bottom'
                            }
                        }
                    },
                    data: {
                        labels: [''],
                        datasets: data.map(item => ({
                            label: item.Key,
                            data: [item.Count],
                            borderColor: borderColors[item.Key],
                            backgroundColor: backgroundColors[item.Key]
                        }))
                    }
                });
                console.log(chart);
            },
            error: function () {
                alert("Error loading data! Please try again.");
            }
        });
    });
    </script>
    @*thong ke don thuoc*@
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script>
    $(document).ready(() => {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ChartDataDT", "HomeAdmin", new { month = DateTime.Now.Month})',
            success: function (charts) {
                if (charts.code == 404) {
                    lert("Error loading data! Please try again!.");
                    return;
                }
                var data = charts.dbchart;
                //console.log(data);
                if (data == 0) {
                    var ctx = document.getElementById('chartDT').getContext('2d');
                    var chart = new Chart(ctx, {
                        options: {
                            layout: {
                                padding: {
                                    top: 250
                                }
                            },
                            responsive: true,
                            plugins: {
                                title: {
                                    display: true,
                                    text: 'Chưa có đơn thuốc nào đã kê trong tháng @ViewBag.month',
                                    color: 'red',
                                    font: {
                                        size: 20,
                                    }
                                }
                            }
                        }
                    });
                }
                else {
                    var ctx = document.getElementById('chartDT').getContext('2d');
                    var chart = new Chart(ctx, {
                        type: 'bar',
                        options: {
                            indexAxis: 'x',
                            element: {
                                bar: {
                                    borderWidth: 1
                                },
                                innerHeight:10
                            },
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                title: {
                                    display: true,
                                    text: 'Biểu đồ thống kê đơn thuốc tháng @DateTime.Now.Month',
                                    position: 'bottom'
                                }
                            }
                        },
                        data: {
                            labels: [''],
                            datasets: data.map(item => ({
                                label: item.Key,
                                data: [item.Count],
                                borderColor: '#33ccff',
                                backgroundColor: 'red'
                            }))
                        }
                    });
                }
            },
            error: function () {
                alert("Error loading data! Please try again.");
            }
        });
    });
    </script>
}