@model IEnumerable<VanLangDoctor.Models.DON_THUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">

    <div class="page-wrapper" style="display: block">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Xin chào</h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index_TT", "QL_TinTuc")">Thông tin tin tức</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Thêm", "Create")
            </p>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.KET_QUA)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CHUAN_DOAN)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CHI_DINH)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LOI_DAN)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NGAY_LAP)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BACSI.TEN_BACSI)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SO_KHAM_BENH.ID_SOKHAMBENH)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KET_QUA)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CHUAN_DOAN)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CHI_DINH)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LOI_DAN)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NGAY_LAP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BACSI.TEN_BACSI)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SO_KHAM_BENH.ID_SOKHAMBENH)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID_DON_THUOC }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.ID_DON_THUOC }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID_DON_THUOC })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
</div>