@model VanLangDoctor.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Đặt lại mật khẩu";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng ký tài khoản</title>

    <!-- Font Icon -->
    <link href="~/Content/assets_SignUp/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />

    <!-- Main css -->
    <link href="~/Content/assets_SignUp/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2>@ViewBag.Title.</h2>

                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "register-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Code)
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="Email" id="email" placeholder="Tài khoản" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="Password" id="pass" placeholder="Mật khẩu" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="ConfirmPassword" id="re_pass" placeholder="Nhập lại mật khẩu" />
                            </div>
                            if (TempData["Success"] != null)
                            {
                                <div class="container-xl mt-3 border bg-danger">@TempData["Success"].ToString()</div>
                            }
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Xác nhận" />
                            </div>
                        }

                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Content/assets_SignUp/images/signup-image.jpg" alt="sing up image"></figure>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="~/Content/assets_SignUp/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/assets_SignUp/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
